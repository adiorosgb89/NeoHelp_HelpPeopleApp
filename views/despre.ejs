    </script>

    <script>
        $(".section2-div div:first-child p").each(function () {
            $(this).click(function () {




                if ($(this).hasClass("p-activ") || $(".section2-div div:first-child p").hasClass(
                        "p-activ")) {
                    $(".section2-div div:first-child p").removeClass("p-activ")
                    $(this).addClass("p-activ")

                    // if($(".section2-div div:nth-child(2) p")){

                    // }
                }


                if ($(".section2-div div:first-child p:nth-of-type(1)").hasClass("p-activ")) {
                    $(".section2-div div:nth-child(2) p").text(
                        "La fel cum colaborăm cu indivizi și alte grupuri bazate pe credință, ne străduim, de asemenea, săcolaborăm cu fundații corporative și private pentru a servi mai bine săracii. Dumneavoastră puteţi sprijini munca noastră de a-i ajuta pe cei săraci şi nevoiaşi prin acordarea unei subvenții de fundație sau altor ajutoare. De-a lungul anilor, mai multe fundații private și corporative au permis firmei noastre să administreze programe de ajutorare și dezvoltare, împreună cu inițiative proactive care îmbunătățesc viețile și ajută la ruperea ciclului sărăciei."
                    )
                }
                if ($(".section2-div div:first-child p:nth-of-type(2)").hasClass("p-activ")) {
                    $(".section2-div div:nth-child(2) p").text("bbb")
                }
                if ($(".section2-div div:first-child p:nth-of-type(3)").hasClass("p-activ")) {
                    $(".section2-div div:nth-child(2) p").text("ccc")
                }


            });

        });
    </script>


