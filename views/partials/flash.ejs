<% if(success && success.length) {%>
    <div class="alert alert-success" role="alert">
        <%= success %> 
    </div>
<% } %> 

<% if(error && error.length) {%>
    <div class="alert alert-danger" role="alert">
        <%= error %> 
    </div>
<% } %> 

<script>
    $("document").ready(function(){
    setTimeout(function(){
        $("div.alert").remove();
    }, 1500 ); // 5 secs

});
</script>