<section class="container contact-section1">
    <div class="section1-div">
        <div class="mesaj-div">
            <form action="/mesajcontact" method="POST">


                <div class="group">
                    <input type="text" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Name</label>
                </div>

                <div class="group">
                    <input type="text" required>
                    <span class="highlight"></span>
                    <span class="bar"></span>
                    <label>Email</label>
                </div>
                <div class="group">
                    <textarea name="mesaj" placeholder="Introduceţi mesajul" cols="40" rows="5"></textarea>
                </div>
                <div class="group-btn">
                    <button class="btn conecteaza">Trimite</button>

                </div>

            </form>
        </div>
        <div class="info-div px-2">
            <h3>Adresă sediu: Str. Grigore Octav, Oradea</h3>
            <h3>Număr de telefon: 0753358769</h3>
            <h3>Email: neohelp@buisness.com</h3>
        </div>
    </div>
</section>
<section class="container contact-section2">
    <div class="section2-div">
        
        <% if(!currentUser){ %> 
        <div>
            <a href="/login"><button class="btn conecteaza">Conectează-te</button></a>
            <a href="/login"><button class="btn inregistreaza">înregistrează-te</button></a>
        </div>
        <%}%>
</section>



